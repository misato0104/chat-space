.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name bbb
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            %a{:href => "/groups/new"}
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            %a{:href => "/users/957/edit"}
              %i.fa.fa-cog
    .groups
      = render "messages/groups"

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group{"data-group_id" => "1920"}
          abc
        %ul.main-header__left-box__member-list
          Member：
          %li.main-header__left-box__member-list__member bbb
      %a{:href => "/groups/1920/edit"}
        .main-header__edit-btn Edit
    .messages
      = render "messages/chat"

    .form
      %form#new_message.new_message{"accept-charset" => "UTF-8", :action => "/groups/1920/messages", :enctype => "multipart/form-data", :method => "post"}
        %input{:name => "utf8", :type => "hidden", :value => "✓"}/
        %input{:name => "authenticity_token", :type => "hidden", :value => "013rE2LawR2ndm5/zoTpFJMUOI21QYklwSUVgChC72kAS+MXH0/kiIqgmkDpHE+Q90XjFdiJ0yjfpDzgI9312Q=="}/
        .input-box
          %input#message_content.input-box__text{:name => "message[content]", :placeholder => "type a message", :type => "text"}/
          %label.input-box__image{:for => "message_image"}
            %i.fa.fa-image
            %input#message_image.input-box__image__file{:name => "message[image]", :type => "file"}/
        %input.submit-btn{:type => "submit", :value => "&#Xf14d", :class=> "fa-share-square"}